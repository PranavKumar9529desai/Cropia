---
import { Smartphone, Cpu, Sprout, Globe, Newspaper, ShieldAlert } from "lucide-react";
---

<section id="how-it-works" class="relative py-24 bg-zinc-950 overflow-hidden min-h-[800px]">
  <!-- Dynamic Background - Static Pulse -->
  <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[500px] h-[500px] bg-emerald-500/5 rounded-full blur-[120px] pointer-events-none transition-colors duration-1000" id="bg-pulse"></div>

  <div class="container mx-auto px-6 md:px-12 relative z-10">
    <!-- Header with Toggles -->
    <div class="text-center max-w-2xl mx-auto mb-16">
       <span class="text-emerald-400 font-bold tracking-widest text-sm uppercase mb-3 block font-brand" id="section-subtitle">
        Workflow
      </span>
      <h2 class="text-4xl md:text-5xl font-light text-white mb-8 font-brand tracking-tight">
        Precision in <br />
        <span class="font-semibold text-transparent bg-clip-text bg-gradient-to-r from-emerald-200 to-emerald-500" id="section-title-highlight">
          Three Simple Steps
        </span>
      </h2>

      <!-- Tab Switcher -->
      <div class="inline-flex p-1 bg-white/5 border border-white/10 rounded-full relative">
         <div id="tab-indicator" class="absolute top-1 left-1 bottom-1 w-[calc(50%-4px)] bg-gray-800 rounded-full shadow-lg transition-all duration-300 ease-out"></div>
         
         <button onclick="switchMode('farmer')" class="relative z-10 px-8 py-2 text-sm font-medium text-white transition-colors duration-300 hover:text-emerald-400 flex items-center gap-2" id="btn-farmer">
            Farmers
         </button>
         <button onclick="switchMode('admin')" class="relative z-10 px-8 py-2 text-sm font-medium text-gray-400 transition-colors duration-300 hover:text-blue-400 flex items-center gap-2" id="btn-admin">
            Admins
         </button>
      </div>
    </div>

    <!-- Process Flow Container -->
    <div class="relative min-h-[400px]" id="steps-container">
      
      <!-- SVG PATH OVERLAY (Shared) -->
      <div class="absolute inset-0 pointer-events-none z-0">
        <!-- Desktop Path -->
        <svg class="hidden md:block w-full h-full" preserveAspectRatio="none">
          <path 
            id="desktop-path" 
            d="" 
            fill="none" 
            stroke="url(#gradient-desktop)" 
            stroke-width="2" 
            stroke-dasharray="8 8"
            class="opacity-20 transition-all duration-700 ease-in-out"
          />
          <defs>
            <linearGradient id="gradient-desktop" x1="0%" y1="0%" x2="100%" y2="0%">
              <stop offset="0%" stop-color="#currentColor" class="stop-color-main" stop-opacity="0" />
              <stop offset="50%" stop-color="#currentColor" class="stop-color-main" stop-opacity="1" />
              <stop offset="100%" stop-color="#currentColor" class="stop-color-main" stop-opacity="0" />
            </linearGradient>
          </defs>
        </svg>

        <!-- Mobile Path -->
        <svg class="block md:hidden w-full h-full" overflow="visible">
          <path 
            id="mobile-path" 
            d=""
            fill="none" 
            stroke="url(#gradient-mobile)" 
            stroke-width="2" 
            stroke-dasharray="8 8" 
            class="opacity-20 transition-all duration-700"
          />
           <defs>
            <linearGradient id="gradient-mobile" x1="0%" y1="0%" x2="0%" y2="100%">
              <stop offset="0%" stop-color="#currentColor" class="stop-color-main" stop-opacity="0" />
              <stop offset="50%" stop-color="#currentColor" class="stop-color-main" stop-opacity="1" />
              <stop offset="100%" stop-color="#currentColor" class="stop-color-main" stop-opacity="0" />
            </linearGradient>
          </defs>
        </svg>

        <!-- THE GLOWING DOT -->
        <div id="glow-dot" class="absolute w-4 h-4 rounded-full shadow-[0_0_20px_4px_currentColor] z-20 opacity-0 transition-opacity duration-300 text-emerald-400 bg-current"></div>
      </div>

      <!-- VIEW: FARMER -->
      <div id="farmer-view" class="grid grid-cols-1 md:grid-cols-3 gap-16 md:gap-12 absolute inset-0 transition-all duration-500 transform opacity-100 scale-100 pointer-events-auto">
          <!-- Step 1: Capture -->
          <div id="f-step-1" class="step-card group relative flex flex-col items-center text-center">
            <div class="relative z-10 mb-6">
              <div class="icon-box w-20 h-20 rounded-2xl bg-gray-900 border border-white/10 flex items-center justify-center shadow-lg transition-all duration-500">
                  <Smartphone class="w-10 h-10 text-gray-500 transition-colors duration-500" />
              </div>
              <div class="badge absolute -bottom-3 -right-3 w-8 h-8 bg-black rounded-full border border-gray-800 flex items-center justify-center text-xs font-bold text-gray-500 z-20 transition-colors duration-500">1</div>
            </div>
            <h3 class="text-xl font-semibold text-white mb-3">Snap & Upload</h3>
            <p class="text-gray-400 font-light text-sm leading-relaxed max-w-xs mx-auto">Simply capture crop images offline. Data syncs automatically.</p>
          </div>

          <!-- Step 2: Diagnose -->
          <div id="f-step-2" class="step-card group relative flex flex-col items-center text-center">
            <div class="relative z-10 mb-6">
              <div class="icon-box w-20 h-20 rounded-2xl bg-gray-900 border border-white/10 flex items-center justify-center shadow-lg transition-all duration-500">
                  <Cpu class="w-10 h-10 text-gray-500 transition-colors duration-500" />
              </div>
              <div class="badge absolute -bottom-3 -right-3 w-8 h-8 bg-black rounded-full border border-gray-800 flex items-center justify-center text-xs font-bold text-gray-500 z-20 transition-colors duration-500">2</div>
            </div>
            <h3 class="text-xl font-semibold text-white mb-3">AI Diagnosis</h3>
            <p class="text-gray-400 font-light text-sm leading-relaxed max-w-xs mx-auto">"Gatekeeper" AI identifies diseases instantly with >98% accuracy.</p>
          </div>

          <!-- Step 3: Resolve -->
          <div id="f-step-3" class="step-card group relative flex flex-col items-center text-center">
            <div class="relative z-10 mb-6">
              <div class="icon-box w-20 h-20 rounded-2xl bg-gray-900 border border-white/10 flex items-center justify-center shadow-lg transition-all duration-500">
                  <Sprout class="w-10 h-10 text-gray-500 transition-colors duration-500" />
              </div>
              <div class="badge absolute -bottom-3 -right-3 w-8 h-8 bg-black rounded-full border border-gray-800 flex items-center justify-center text-xs font-bold text-gray-500 z-20 transition-colors duration-500">3</div>
            </div>
            <h3 class="text-xl font-semibold text-white mb-3">Treat & Recover</h3>
            <p class="text-gray-400 font-light text-sm leading-relaxed max-w-xs mx-auto">Receive localized treatment plans and protect your yield.</p>
          </div>
      </div>

       <!-- VIEW: ADMIN -->
      <div id="admin-view" class="grid grid-cols-1 md:grid-cols-3 gap-16 md:gap-12 absolute inset-0 transition-all duration-500 transform opacity-0 scale-95 pointer-events-none">
          <!-- Step 1: Monitor -->
          <div id="a-step-1" class="step-card group relative flex flex-col items-center text-center">
            <div class="relative z-10 mb-6">
              <div class="icon-box w-20 h-20 rounded-2xl bg-gray-900 border border-white/10 flex items-center justify-center shadow-lg transition-all duration-500">
                  <Globe class="w-10 h-10 text-gray-500 transition-colors duration-500" />
              </div>
              <div class="badge absolute -bottom-3 -right-3 w-8 h-8 bg-black rounded-full border border-gray-800 flex items-center justify-center text-xs font-bold text-gray-500 z-20 transition-colors duration-500">1</div>
            </div>
            <h3 class="text-xl font-semibold text-white mb-3">Global Matrix</h3>
            <p class="text-gray-400 font-light text-sm leading-relaxed max-w-xs mx-auto">Visualize every scan across district and state lines in real-time.</p>
          </div>

          <!-- Step 2: Analyze -->
          <div id="a-step-2" class="step-card group relative flex flex-col items-center text-center">
            <div class="relative z-10 mb-6">
              <div class="icon-box w-20 h-20 rounded-2xl bg-gray-900 border border-white/10 flex items-center justify-center shadow-lg transition-all duration-500">
                  <Newspaper class="w-10 h-10 text-gray-500 transition-colors duration-500" />
              </div>
              <div class="badge absolute -bottom-3 -right-3 w-8 h-8 bg-black rounded-full border border-gray-800 flex items-center justify-center text-xs font-bold text-gray-500 z-20 transition-colors duration-500">2</div>
            </div>
            <h3 class="text-xl font-semibold text-white mb-3">Regional Intel</h3>
            <p class="text-gray-400 font-light text-sm leading-relaxed max-w-xs mx-auto">AI aggregates data to generate news headlines and outbreak warnings.</p>
          </div>

          <!-- Step 3: Govern -->
          <div id="a-step-3" class="step-card group relative flex flex-col items-center text-center">
            <div class="relative z-10 mb-6">
              <div class="icon-box w-20 h-20 rounded-2xl bg-gray-900 border border-white/10 flex items-center justify-center shadow-lg transition-all duration-500">
                  <ShieldAlert class="w-10 h-10 text-gray-500 transition-colors duration-500" />
              </div>
              <div class="badge absolute -bottom-3 -right-3 w-8 h-8 bg-black rounded-full border border-gray-800 flex items-center justify-center text-xs font-bold text-gray-500 z-20 transition-colors duration-500">3</div>
            </div>
            <h3 class="text-xl font-semibold text-white mb-3">Allocated Response</h3>
            <p class="text-gray-400 font-light text-sm leading-relaxed max-w-xs mx-auto">Deploy subsidies and chemicals to precise affected zones instantly.</p>
          </div>
      </div>
    
    </div>
  </div>
</section>

<style>
  /* === FARMER THEME (Natural/Green) === */
  .farmer-mode .stop-color-main { stop-color: #10b981; } /* Emerald-500 */
  .farmer-mode #glow-dot { @apply text-emerald-400; }
  
  /* Active States (Farmer) */
  #f-step-1.active .icon-box { @apply border-emerald-500/50 shadow-emerald-500/20 bg-gray-800; }
  #f-step-1.active .icon-box svg { @apply text-emerald-400; }
  
  #f-step-2.active .icon-box { @apply border-blue-500/50 shadow-blue-500/20 bg-gray-800; }
  #f-step-2.active .icon-box svg { @apply text-blue-400; }
  
  #f-step-3.active .icon-box { @apply border-amber-500/50 shadow-amber-500/20 bg-gray-800; }
  #f-step-3.active .icon-box svg { @apply text-amber-400; }

  /* === ADMIN THEME (Tech/Blue-Purple) === */
  .admin-mode .stop-color-main { stop-color: #3b82f6; } /* Blue-500 */
  .admin-mode #glow-dot { @apply text-blue-400; }

  /* Active States (Admin) */
  #a-step-1.active .icon-box { @apply border-blue-500/50 shadow-blue-500/20 bg-gray-800; }
  #a-step-1.active .icon-box svg { @apply text-blue-400; }
  
  #a-step-2.active .icon-box { @apply border-purple-500/50 shadow-purple-500/20 bg-gray-800; }
  #a-step-2.active .icon-box svg { @apply text-purple-400; }
  
  #a-step-3.active .icon-box { @apply border-red-500/50 shadow-red-500/20 bg-gray-800; }
  #a-step-3.active .icon-box svg { @apply text-red-500; }

</style>

<script is:inline>
  let mode = 'farmer'; // 'farmer' | 'admin'
  
  // Elements
  const section = document.getElementById('how-it-works');
  // Add initial class
  section.classList.add('farmer-mode');

  function switchMode(newMode) {
      if(mode === newMode) return;
      mode = newMode;

      const farmerView = document.getElementById('farmer-view');
      const adminView = document.getElementById('admin-view');
      const btnFarmer = document.getElementById('btn-farmer');
      const btnAdmin = document.getElementById('btn-admin');
      const tabIndicator = document.getElementById('tab-indicator');
      const sectionSub = document.getElementById('section-subtitle');
      const sectionTitle = document.getElementById('section-title-highlight');
      const dot = document.getElementById('glow-dot');
      const bgPulse = document.getElementById('bg-pulse');

      // Update UI Tabs
      if(mode === 'farmer') {
          tabIndicator.style.transform = 'translateX(0)';
          btnFarmer.classList.add('text-white');
          btnFarmer.classList.remove('text-gray-400');
          btnAdmin.classList.add('text-gray-400');
          btnAdmin.classList.remove('text-white');

          // Text Updates
          sectionSub.textContent = 'For Farmers';
          sectionSub.className = 'text-emerald-400 font-bold tracking-widest text-sm uppercase mb-3 block font-brand transition-colors';
          sectionTitle.className = 'font-semibold text-transparent bg-clip-text bg-gradient-to-r from-emerald-200 to-emerald-500 transition-colors';
          bgPulse.className = 'absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[500px] h-[500px] bg-emerald-500/5 rounded-full blur-[120px] pointer-events-none transition-colors duration-1000';
          
          // View Transition
          farmerView.style.opacity = '1';
          farmerView.style.pointerEvents = 'auto';
          farmerView.style.transform = 'scale(1)';
          
          adminView.style.opacity = '0';
          adminView.style.pointerEvents = 'none';
          adminView.style.transform = 'scale(0.95)';

          section.classList.remove('admin-mode');
          section.classList.add('farmer-mode');

      } else {
          tabIndicator.style.transform = 'translateX(100%)';
          btnAdmin.classList.add('text-white');
          btnAdmin.classList.remove('text-gray-400');
          btnFarmer.classList.add('text-gray-400');
          btnFarmer.classList.remove('text-white');
          
          // Text Updates
          sectionSub.textContent = 'For Administration';
          sectionSub.className = 'text-blue-400 font-bold tracking-widest text-sm uppercase mb-3 block font-brand transition-colors';
          sectionTitle.className = 'font-semibold text-transparent bg-clip-text bg-gradient-to-r from-blue-200 to-purple-500 transition-colors';
          bgPulse.className = 'absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[500px] h-[500px] bg-blue-500/5 rounded-full blur-[120px] pointer-events-none transition-colors duration-1000';

          // View Transition
          adminView.style.opacity = '1';
          adminView.style.pointerEvents = 'auto';
          adminView.style.transform = 'scale(1)';
          
          farmerView.style.opacity = '0';
          farmerView.style.pointerEvents = 'none';
          farmerView.style.transform = 'scale(0.95)';

          section.classList.remove('farmer-mode');
          section.classList.add('admin-mode');
      }

      // Reset Dot
      dot.style.opacity = '0';

      // Recalculate Paths after transition
      // We wait for CSS transition 500ms? 
      // Actually we calculate immediately but loop ensures it catches up
      requestAnimationFrame(() => {
           initPaths();
           onScroll(); 
      });
  }
  
  // Make global so button onclick works
  window.switchMode = switchMode;


  // --- PATH ENGINE ---

  let pathData = {
    desktop: null,
    mobile: null,
    current: null,
    length: 0
  };

  function initPaths() {
    pathData.desktop = document.getElementById('desktop-path');
    pathData.mobile = document.getElementById('mobile-path');

    const isDesktop = window.matchMedia('(min-width: 768px)').matches;
    
    // Select Steps based on MODE
    const prefix = mode === 'farmer' ? 'f' : 'a';
    const s1 = document.getElementById(`${prefix}-step-1`);
    const s2 = document.getElementById(`${prefix}-step-2`);
    const s3 = document.getElementById(`${prefix}-step-3`);
    
    if (isDesktop && pathData.desktop) {
        if(s1 && s2 && s3) {
            updatePathGeometry(pathData.desktop, s1, s2, s3, isDesktop);
        }
        pathData.current = pathData.desktop;
    } else {
        if(s1 && s2 && s3) {
             updatePathGeometry(pathData.mobile, s1, s2, s3, isDesktop);
        }
        pathData.current = pathData.mobile;
    }

    if (pathData.current) {
      pathData.length = pathData.current.getTotalLength();
    }
  }

  function updatePathGeometry(pathElement, el1, el2, el3, isDesktop) {
      const container = document.getElementById('steps-container');
      const rectC = container.getBoundingClientRect();
      const rect1 = el1.getBoundingClientRect();
      const rect2 = el2.getBoundingClientRect();
      const rect3 = el3.getBoundingClientRect();

      const getCenter = (rect) => ({
          x: (rect.left + rect.width/2) - rectC.left,
          y: (rect.top + rect.height/2) - rectC.top 
      });

      // Adjust Y for icon center (approximate, since CSS puts badge at bottom)
      // The icon box is 80x80 (w-20). The text is below. 
      // We want line to go through the box center.
      // The step-card is flex-col.
      // Let's rely on getBoundingClientRect of the WHOLE card? No, clearer to aim for the icon-box?
      // But we passed the card element.
      // Offset: The icon box is at the top of the card.
      const iconOffset = 40; // half of 80px

      const p1 = getCenter(rect1);
      const p2 = getCenter(rect2);
      const p3 = getCenter(rect3);
      
      // Override Y to match icon visual center relative to card top
      // Actually simpler: just use the calculated centers but shift Y up because the Card content below > Card content above
      // Let's refine:
      
      // Vertical correction factor
      const yCorrection = -30; // Just eye-balling based on text height

      let d = "";
      if(isDesktop) {
          // Horizontal line
          // Adjust Y to be flat if we want a straight line or curved?
          // Since it's a grid, they should be roughly aligned Y-wise.
          const Y = p1.y + yCorrection; 
          d = `M ${p1.x},${Y} L ${p2.x},${Y} L ${p3.x},${Y}`;
      } else {
          // Vertical line
           d = `M ${p1.x},${p1.y + yCorrection} L ${p2.x},${p2.y + yCorrection} L ${p3.x},${p3.y + yCorrection}`;
      }
      
      pathElement.setAttribute('d', d);
  }

  function onScroll() {
    const dot = document.getElementById('glow-dot');
    if (!section || !pathData.current || !dot) return;

    const rect = section.getBoundingClientRect();
    const windowHeight = window.innerHeight;
    
    // Animation Range
    const startOffset = windowHeight * 0.8;
    const endOffset = windowHeight * 0.2;
    const currentPos = windowHeight - rect.top;
    const totalDistance = windowHeight + rect.height;
    
    let progress = currentPos / totalDistance;
    progress = Math.max(0, Math.min(1, progress));
    
    const rangeStart = 0.25;
    const rangeEnd = 0.75;
    let pathProgress = (progress - rangeStart) / (rangeEnd - rangeStart);
    pathProgress = Math.max(0, Math.min(1, pathProgress));

    // Move Dot
    const point = pathData.current.getPointAtLength(pathProgress * pathData.length);
    
    if (pathProgress <= 0.05 || pathProgress >= 0.95) {
        dot.style.opacity = '0';
    } else {
        dot.style.opacity = '1';
    }
    
    dot.style.transform = `translate(${point.x}px, ${point.y}px)`;
    
    // COLOR LOGIC
    const prefix = mode === 'farmer' ? 'f' : 'a';
    const s1 = document.getElementById(`${prefix}-step-1`);
    const s2 = document.getElementById(`${prefix}-step-2`);
    const s3 = document.getElementById(`${prefix}-step-3`);
    
    // Thresholds
    if (pathProgress > 0.1) s1?.classList.add('active');
    else s1?.classList.remove('active');
    
    if (pathProgress > 0.5) s2?.classList.add('active');
    else s2?.classList.remove('active');
    
    if (pathProgress > 0.9) s3?.classList.add('active');
    else s3?.classList.remove('active');
  }

  // Listeners
  window.addEventListener('scroll', () => requestAnimationFrame(onScroll));
  window.addEventListener('resize', () => { initPaths(); onScroll(); });
  
  // Loop to catch layout shifts
  setInterval(() => {
      // Only lightweight recalc if needed, or just let resize handle it.
      // But initial load images might shift things.
      // We'll run it a few times then stop? No, low cost.
  }, 1000);

  // Init
  setTimeout(() => { initPaths(); onScroll(); }, 100);
  setTimeout(() => { initPaths(); onScroll(); }, 1000);

</script>
