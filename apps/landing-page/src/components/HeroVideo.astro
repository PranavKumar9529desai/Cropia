---
import { buttonVariants } from "@repo/ui/components/button";
import { cn } from "@repo/ui/lib/utils";
---

<div class="relative h-screen w-full overflow-hidden">
  <!-- Layer 1: Poster Image -->
  <img
    src="/hero-poster.jpg"
    alt="Hero Poster"
    class="absolute inset-0 h-full w-full object-cover z-0"
  />

  <!-- Layer 2: Video -->
  <video
    autoplay
    loop
    muted
    playsinline
    class="absolute inset-0 h-full w-full object-cover z-10 opacity-0 transition-opacity duration-1000"
    onloadeddata="this.classList.remove('opacity-0')"
  >
    <source src="/hero_high_res.mp4" type="video/mp4" />
    Your browser does not support the video tag.
  </video>

  <!-- Layer 3: Overlay -->
  <div class="absolute inset-0 bg-gradient-to-t from-gray-950 via-gray-900/60 to-black/30 z-20"></div>

  <!-- Layer 4: Content -->
<div class="relative z-30 flex h-full items-center px-6 md:px-20">
    <div class="max-w-3xl animate-in fade-in slide-in-from-bottom-10 duration-1000">
      <span class="text-emerald-400 font-bold tracking-widest text-sm md:text-base uppercase mb-4 block font-brand">
        AI-Driven Agriculture
      </span>
      <h1 class="text-5xl md:text-7xl font-light tracking-tight text-white mb-6 font-brand leading-[1.1]">
        Grow Smarter, <br />
        <span class="font-semibold text-transparent bg-clip-text bg-gradient-to-r from-emerald-200 to-white">
          Yield Better.
        </span>
      </h1>
      <p class="text-lg md:text-xl text-gray-100 max-w-xl mb-8 font-light leading-relaxed">
        Cropia empowers farmers with satellite imagery, real-time soil data, and precision analytics to maximize harvest potential.
      </p>
      <div class="flex flex-col sm:flex-row gap-4">
        <a
          href="/login"
          class={cn(
            buttonVariants({ variant: "default", size: "lg" }),
            "text-base px-8 h-12 rounded-full bg-primary hover:bg-primary/80 text-white border-0 shadow-lg shadow-primary/20 transition-all hover:scale-105"
          )}
        >
          Get Started
        </a>
        <a
          href="#features"
          class={cn(
            buttonVariants({ variant: "outline", size: "lg" }),
            "text-base px-8 h-12 rounded-full bg-white/10 border-white/20 text-white hover:bg-white/20 hover:text-white backdrop-blur-md transition-all hover:scale-105"
          )}
        >
          Learn More
        </a>
      </div>
    </div>
  </div>
</div>
