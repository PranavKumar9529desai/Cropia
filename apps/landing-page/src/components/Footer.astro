---
import { Github, Linkedin, Twitter, MapPin, Mail, Heart } from "lucide-react";
import { Image } from "astro:assets";
import logoImage from "../assets/logo.png";

const farmerUrl = import.meta.env.FRONTEND_URL_FARMER_APP;
const adminUrl = import.meta.env.FRONTEND_URL_ADMIN_APP;
---

<footer class="relative bg-black border-t border-emerald-500/30">
  <!-- Background Gradient -->
  <div class="absolute inset-0 bg-gradient-to-t from-emerald-950/10 to-transparent pointer-events-none"></div>
  
  <div class="container mx-auto px-6 md:px-12 relative z-10">
    
    <!-- Main Footer Content -->
    <div class="py-16 grid md:grid-cols-2 lg:grid-cols-4 gap-12 lg:gap-8">
      
      <!-- Brand Column -->
      <div class="lg:col-span-2">
        <a href="/" class="inline-flex items-center gap-3 mb-6">
          <Image 
            src={logoImage} 
            alt="Cropia Logo" 
            class="w-10 h-10 object-contain"
            width={40}
            height={40}
          />
          <span class="text-2xl font-bold text-white font-brand">Cropia</span>
        </a>
        <p class="text-gray-400 leading-relaxed max-w-md mb-6">
          AI-powered early crop health detection. Empowering farmers with real-time disease diagnosis and government officials with regional outbreak monitoring.
        </p>
        
        <!-- Social Links -->
        <div class="flex items-center gap-4">
          <a 
            href="https://github.com/PranavKumar9529desai/Cropia" 
            target="_blank"
            rel="noopener noreferrer"
            class="w-10 h-10 rounded-lg bg-white/5 border border-white/10 flex items-center justify-center
                   text-gray-400 hover:text-white hover:bg-white/10 hover:border-white/20
                   transition-all duration-300"
            aria-label="View Cropia on GitHub"
          >
            <Github className="w-5 h-5" />
          </a>
          <a 
            href="https://www.linkedin.com/in/pranavkumar-desai-b27b8a252/" 
            target="_blank"
            rel="noopener noreferrer"
            class="w-10 h-10 rounded-lg bg-white/5 border border-white/10 flex items-center justify-center
                   text-gray-400 hover:text-[#0A66C2] hover:bg-[#0A66C2]/10 hover:border-[#0A66C2]/30
                   transition-all duration-300"
            aria-label="Connect on LinkedIn"
          >
            <Linkedin className="w-5 h-5" />
          </a>
          <a 
            href="https://x.com/pranavdesa1549" 
            target="_blank"
            rel="noopener noreferrer"
            class="w-10 h-10 rounded-lg bg-white/5 border border-white/10 flex items-center justify-center
                   text-gray-400 hover:text-white hover:bg-white/10 hover:border-white/20
                   transition-all duration-300"
            aria-label="Follow on X (Twitter)"
          >
            <Twitter className="w-5 h-5" />
          </a>
        </div>
      </div>

      <!-- Quick Links -->
      <div>
        <h3 class="text-white font-semibold mb-6 font-brand">Quick Links</h3>
        <ul class="space-y-4">
          <li>
            <a href="#features" class="text-gray-400 hover:text-emerald-400 transition-colors duration-200">
              Features
            </a>
          </li>
          <li>
            <a href="#how-it-works" class="text-gray-400 hover:text-emerald-400 transition-colors duration-200">
              How It Works
            </a>
          </li>
          <li>
            <a href="#testimonials" class="text-gray-400 hover:text-emerald-400 transition-colors duration-200">
              Testimonials
            </a>
          </li>
          <li>
            <a href="#faq" class="text-gray-400 hover:text-emerald-400 transition-colors duration-200">
              FAQ
            </a>
          </li>
        </ul>
      </div>

      <!-- Get Started -->
      <div>
        <h3 class="text-white font-semibold mb-6 font-brand">Get Started</h3>
        <ul class="space-y-4">
          <li>
            <a 
              href={farmerUrl} 
              target="_blank"
              rel="noopener noreferrer"
              class="text-gray-400 hover:text-emerald-400 transition-colors duration-200"
            >
              Farmer App
            </a>
          </li>
          <li>
            <a 
              href={adminUrl} 
              target="_blank"
              rel="noopener noreferrer"
              class="text-gray-400 hover:text-emerald-400 transition-colors duration-200"
            >
              Admin Dashboard
            </a>
          </li>
          <li>
            <a 
              href="https://github.com/PranavKumar9529desai/Cropia" 
              target="_blank"
              rel="noopener noreferrer"
              class="text-gray-400 hover:text-emerald-400 transition-colors duration-200"
            >
              GitHub Repository
            </a>
          </li>
          <li>
            <a 
              href="https://github.com/PranavKumar9529desai" 
              target="_blank"
              rel="noopener noreferrer"
              class="text-gray-400 hover:text-emerald-400 transition-colors duration-200"
            >
              Developer Profile
            </a>
          </li>
        </ul>
      </div>
    </div>

    <!-- Contact & Address Bar -->
    <div class="py-6 border-t border-white/5 flex flex-col md:flex-row items-center justify-between gap-4">
      <div class="flex flex-wrap items-center justify-center md:justify-start gap-6">
        <a 
          href="mailto:dpranav7745@gmail.com" 
          class="flex items-center gap-2 text-gray-400 hover:text-emerald-400 transition-colors duration-200"
        >
          <Mail className="w-4 h-4" />
          <span class="text-sm">dpranav7745@gmail.com</span>
        </a>
        <div class="flex items-center gap-2 text-gray-500">
          <MapPin className="w-4 h-4" />
          <span class="text-sm">Lovely Professional University, Kapurthala, Punjab</span>
        </div>
      </div>
    </div>

    <!-- Copyright -->
    <div class="py-6 border-t border-white/5">
      <div class="flex flex-col md:flex-row items-center justify-between gap-4">
        <p class="text-gray-500 text-sm text-center md:text-left">
          Â© {new Date().getFullYear()} Cropia. All rights reserved. MIT License.
        </p>
        <p class="flex items-center gap-1.5 text-gray-500 text-sm">
          Made with <Heart className="w-4 h-4 text-red-500 fill-red-500" /> by 
          <a 
            href="https://github.com/PranavKumar9529desai" 
            target="_blank"
            rel="noopener noreferrer"
            class="text-emerald-400 hover:text-emerald-300 transition-colors"
          >
            PranavKumar Desai
          </a>
        </p>
      </div>
    </div>
  </div>
</footer>
