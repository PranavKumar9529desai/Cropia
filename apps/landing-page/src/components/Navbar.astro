---
import { Menu, X } from "lucide-react";

const links = [
  { name: "Features", href: "#features" },
  { name: "How It Works", href: "#how-it-works" },
  { name: "Testimonials", href: "#testimonials" },
  { name: "FAQ", href: "#faq" },
];

import { Image } from "astro:assets";
import logoImage from "../assets/logo.png";

const farmerUrl = import.meta.env.FRONTEND_URL_FARMER_APP;
const adminUrl = import.meta.env.FRONTEND_URL_ADMIN_APP;
---

<nav id="navbar" class="fixed top-0 left-0 z-50 w-full transition-all duration-300">
  <!-- Transparent by default - only shows background when scrolled -->
  <div class="navbar-bg absolute inset-0 opacity-0 transition-all duration-300"></div>
  
  <div class="w-full px-6 md:px-20 py-3 relative z-10">
    <div class="flex items-center justify-between">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-2 hover:opacity-80 transition-opacity group">
        <Image 
          src={logoImage} 
          alt="Cropia" 
          class="h-9 w-auto transition-transform group-hover:scale-105" 
          width={36}
          height={36}
          densities={[1.5, 2]}
        />
        <span class="text-lg font-bold font-brand tracking-tight text-white">Cropia</span>
      </a>

      <!-- Desktop Menu -->
      <div class="hidden md:flex items-center gap-1">
        {links.map((link) => (
          <a 
            href={link.href} 
            class="nav-link relative px-4 py-2 text-sm font-medium text-white/80 hover:text-white 
                   transition-all duration-300 rounded-lg group"
          >
            <span class="relative z-10">{link.name}</span>
            <!-- Hover background -->
            <span class="absolute inset-0 bg-white/0 group-hover:bg-white/10 rounded-lg transition-all duration-300"></span>
            <!-- Active indicator (shows on hover) -->
            <span class="absolute bottom-0 left-1/2 -translate-x-1/2 w-0 h-0.5 bg-emerald-400 
                        group-hover:w-6 transition-all duration-300 rounded-full"></span>
          </a>
        ))}
        
        <!-- CTA Button -->
        <a 
          href="/demo" 
          target="_blank"
          rel="noopener noreferrer"
          class="ml-4 px-5 py-2 rounded-full text-sm font-semibold
                 bg-gradient-to-r from-emerald-500 to-teal-500 text-white
                 hover:from-emerald-400 hover:to-teal-400
                 shadow-lg shadow-emerald-500/20 hover:shadow-emerald-500/40
                 transition-all duration-300 hover:scale-105 active:scale-95"
        >
          Get Started
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button 
        id="mobile-menu-btn"
        class="md:hidden w-9 h-9 flex items-center justify-center rounded-lg 
               text-white hover:bg-white/10 transition-all duration-300"
        aria-label="Toggle menu"
      >
        <Menu className="w-5 h-5 menu-open-icon" />
        <X className="w-5 h-5 menu-close-icon hidden" />
      </button>
    </div>
  </div>

  <!-- Mobile Menu Panel -->
  <div id="mobile-menu" class="md:hidden fixed inset-0 top-0 left-0 w-full h-screen
                               bg-gray-950/98 backdrop-blur-xl
                               transform -translate-y-full opacity-0 pointer-events-none
                               transition-all duration-300 ease-out z-40">
    <!-- Mobile Header -->
    <div class="px-4 py-3 flex items-center justify-between border-b border-white/10">
      <a href="/" class="flex items-center gap-2">
        <Image src={logoImage} alt="Cropia" class="h-9 w-auto" width={36} height={36} densities={[1.5, 2]} />
        <span class="text-lg font-bold font-brand tracking-tight text-white">Cropia</span>
      </a>
      <button 
        id="mobile-menu-close"
        class="w-9 h-9 flex items-center justify-center rounded-lg 
               text-white hover:bg-white/10 transition-all duration-300"
        aria-label="Close menu"
      >
        <X className="w-5 h-5" />
      </button>
    </div>
    
    <!-- Mobile Navigation Links -->
    <div class="px-4 py-6 flex flex-col h-[calc(100vh-60px)]">
      <div class="flex-1 space-y-1">
        {links.map((link, index) => (
          <a 
            href={link.href} 
            class="mobile-nav-link block px-4 py-3 text-base font-medium text-white/80 hover:text-white 
                   hover:bg-white/5 rounded-lg transition-all duration-200
                   border-b border-white/5 last:border-b-0"
            style={`animation-delay: ${index * 50}ms`}
          >
            {link.name}
          </a>
        ))}
      </div>
      
      <!-- Mobile CTA -->
      <div class="pt-4 space-y-3">
        <a 
          href={farmerUrl} 
          target="_blank"
          rel="noopener noreferrer"
          class="block w-full py-3 text-center rounded-lg text-white font-semibold text-base
                 bg-gradient-to-r from-emerald-500 to-teal-500
                 hover:from-emerald-400 hover:to-teal-400 
                 shadow-lg shadow-emerald-500/30
                 transition-all duration-300 active:scale-[0.98]"
        >
          Get Started â€” It's Free
        </a>
        <a 
          href={adminUrl} 
          target="_blank"
          rel="noopener noreferrer"
          class="block w-full py-3 text-center rounded-lg text-white/70 font-medium text-base
                 border border-white/20 hover:border-white/40 hover:bg-white/5 hover:text-white
                 transition-all duration-300 active:scale-[0.98]"
        >
          Admin Dashboard
        </a>
      </div>
    </div>
  </div>
</nav>

<style>
  /* Scrolled state - solid background */
  #navbar.scrolled .navbar-bg {
    @apply opacity-100 bg-gray-950/95 backdrop-blur-xl border-b border-white/10;
  }
  
  /* Active nav link */
  .nav-link.active {
    @apply text-white;
  }
  
  .nav-link.active span:last-child {
    @apply w-6;
  }
  
  /* Mobile menu open state */
  #mobile-menu.open {
    @apply translate-y-0 opacity-100 pointer-events-auto;
  }
  
  /* Mobile link entrance animation */
  #mobile-menu.open .mobile-nav-link {
    animation: slideInFromRight 0.3s ease-out forwards;
  }
  
  @keyframes slideInFromRight {
    from {
      opacity: 0;
      transform: translateX(20px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }
</style>

<script>
  const navbar = document.getElementById('navbar');
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenuClose = document.getElementById('mobile-menu-close');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuOpenIcon = document.querySelector('.menu-open-icon');
  const menuCloseIcon = document.querySelector('.menu-close-icon');
  const mobileNavLinks = document.querySelectorAll('.mobile-nav-link');
  const navLinks = document.querySelectorAll('.nav-link');

  // Scroll behavior - add background on scroll
  function handleScroll() {
    if (!navbar) return;
    
    if (window.scrollY > 50) {
      navbar.classList.add('scrolled');
    } else {
      navbar.classList.remove('scrolled');
    }
    
    // Update active link based on scroll position
    updateActiveLink();
  }

  // Update active nav link based on scroll position
  // Uses getBoundingClientRect to correctly handle sticky/scroll-jacked sections
  function updateActiveLink() {
    const sections = ['features', 'how-it-works', 'testimonials', 'faq'];
    const viewportHeight = window.innerHeight;
    
    // For how-it-works, we need to check its wrapper since the section is sticky
    const howItWorksWrapper = document.getElementById('how-it-works-wrapper');
    
    let activeSection: string | null = null;
    
    sections.forEach(sectionId => {
      let element: HTMLElement | null;
      
      // Special handling for how-it-works which uses sticky positioning
      if (sectionId === 'how-it-works' && howItWorksWrapper) {
        element = howItWorksWrapper;
      } else {
        element = document.getElementById(sectionId);
      }
      
      if (element) {
        const rect = element.getBoundingClientRect();
        
        // Section is "active" if it's significantly in view
        // Top of section is above viewport middle AND bottom is below viewport top
        const isInView = rect.top < viewportHeight * 0.5 && rect.bottom > viewportHeight * 0.3;
        
        if (isInView) {
          activeSection = sectionId;
        }
      }
    });
    
    // Update nav link states
    navLinks.forEach(link => {
      const htmlLink = link as HTMLAnchorElement;
      const href = htmlLink.getAttribute('href');
      if (href === `#${activeSection}`) {
        htmlLink.classList.add('active');
      } else {
        htmlLink.classList.remove('active');
      }
    });
  }

  // Open mobile menu
  function openMobileMenu() {
    if (!mobileMenu || !menuOpenIcon || !menuCloseIcon) return;
    mobileMenu.classList.add('open');
    menuOpenIcon.classList.add('hidden');
    menuCloseIcon.classList.remove('hidden');
    document.body.style.overflow = 'hidden';
  }

  // Close mobile menu
  function closeMobileMenu() {
    if (!mobileMenu || !menuOpenIcon || !menuCloseIcon) return;
    mobileMenu.classList.remove('open');
    menuOpenIcon.classList.remove('hidden');
    menuCloseIcon.classList.add('hidden');
    document.body.style.overflow = '';
  }

  // Close mobile menu on link click
  mobileNavLinks.forEach(link => {
    link.addEventListener('click', closeMobileMenu);
  });

  // Event listeners
  window.addEventListener('scroll', handleScroll, { passive: true });
  mobileMenuBtn?.addEventListener('click', openMobileMenu);
  mobileMenuClose?.addEventListener('click', closeMobileMenu);

  // Close on escape key
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && mobileMenu && mobileMenu.classList.contains('open')) {
      closeMobileMenu();
    }
  });

  // Initial check
  handleScroll();
</script>
