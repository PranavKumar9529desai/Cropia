---
import SplineDrone from '../components/SplineDrone';
import { Image } from "astro:assets";
import logoImage from "../assets/logo.png";
import '@repo/ui/globals.css';
import '@fontsource/outfit/300.css';
import '@fontsource/outfit/400.css';
import '@fontsource/outfit/500.css';
import '@fontsource/outfit/600.css';
import '@fontsource/outfit/700.css';

const buttonClass = "w-full max-w-sm py-4 px-6 bg-white/5 border border-white/10 rounded-xl hover:border-emerald-500/50 hover:bg-emerald-500/10 transition-all duration-300 group flex items-center justify-center gap-3 shadow-lg hover:shadow-emerald-500/20 backdrop-blur-sm cursor-pointer";
const textClass = "font-medium text-white/80 group-hover:text-emerald-400 text-lg transition-colors";
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/features/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Cropia Demo</title>
        <style>
             body {
                font-family: 'Outfit', sans-serif;
            }

            @keyframes rotate {
                from { transform: rotate(0deg); }
                to { transform: rotate(360deg); }
            }

            .glowing-border-wrapper {
                position: relative;
                padding: 1px;
                border-radius: 0.75rem; /* rounded-xl */
                overflow: hidden;
                width: 100%;
                max-width: 24rem; /* max-w-sm */
                background: rgba(255, 255, 255, 0.05);
            }

            .running-glow {
                position: absolute;
                top: 0;
                left: 0;
                width: 100px;
                height: 40px;
                background: linear-gradient(90deg, transparent, #10b981, transparent);
                filter: blur(10px);
                opacity: 0.8;
                offset-path: rect(0 100% 100% 0 round 0.75rem);
                animation: move-glow 6s linear infinite;
                z-index: 0;
                pointer-events: none;
            }

            @keyframes move-glow {
                0% {
                    offset-distance: 0%;
                }
                100% {
                    offset-distance: 100%;
                }
            }

            .glowing-border-wrapper button {
                position: relative;
                z-index: 1;
                background: #111111;
                width: 100%;
                height: 100%;
                border-radius: calc(0.75rem - 1px);
                border: none;
                padding: 1rem 1.5rem;
            }

            .glowing-border-wrapper:hover .running-glow {
                animation-duration: 3s;
                opacity: 1;
                background: linear-gradient(90deg, transparent, #34d399, transparent);
            }
        </style>
	</head>
	<body class="bg-[#111111] text-white overflow-hidden selection:bg-emerald-500/30">
        <!-- Background Ambient Glow -->
        <div class="absolute top-0 left-1/4 w-96 h-96 bg-emerald-500/10 rounded-full blur-[120px] pointer-events-none"></div>
        <div class="absolute bottom-0 left-0 w-64 h-64 bg-emerald-500/5 rounded-full blur-[100px] pointer-events-none"></div>

        <div class="flex h-screen w-full relative z-10">
            {/* Left Side - Content & Buttons */}
            <div class="w-full  flex flex-col items-center justify-center p-6 lg:p-12 relative bg-[#111111]/50 backdrop-blur-sm">
                
                <div class="flex flex-col items-center mb-12 text-center">
                    <a href="/" class="flex items-center gap-2 mb-6 hover:opacity-80 transition-opacity group">
                        <Image 
                          src={logoImage} 
                          alt="Cropia" 
                          class="h-12 w-auto transition-transform group-hover:scale-105" 
                          width={48}
                          height={48}
                          densities={[1.5, 2]}
                        />
                        <span class="text-2xl font-bold font-brand tracking-tight text-white">Cropia</span>
                    </a>
                  
                    <h1 class="text-4xl md:text-5xl font-light text-white mb-2 tracking-tight">
                        Experience <span class="font-semibold text-transparent bg-clip-text bg-gradient-to-r from-emerald-200 to-emerald-500">Cropia.</span>
                    </h1>
                    <p class="text-gray-400 font-light max-w-sm">Explore the future of AI-driven farming with our interactive preview.</p>
                </div>

                <div class="flex flex-col gap-4 w-full items-center">
                    <button class={buttonClass} onclick="alert('Farmer login functionality coming soon!')">
                        <span class={textClass}>continue as farmer</span>
                    </button>
                    
                    <button class={buttonClass} onclick="alert('Admin login functionality coming soon!')">
                        <span class={textClass}>continue as admin</span>
                    </button>
                    
                    <div class="glowing-border-wrapper">
                        <div class="running-glow"></div>
                        <button class={`${buttonClass.replace('bg-white/5 border border-white/10', '')} !py-3 !flex-col !gap-1`} onclick="alert('Guest login functionality coming soon!')">
                            <span class={textClass}>continue as guest</span>
                            <span class="text-[10px] uppercase tracking-[0.15em] text-emerald-500/80 font-bold">
                                Recommended for first-time users
                            </span>
                        </button>
                    </div>
                </div>
                
                <div class="mt-12 text-center opacity-60">
                    <p class="text-xs text-gray-500 max-w-xs mx-auto">
                        A seamless entry point for recruiters to explore our cutting-edge agricultural intelligence platform.
                    </p>
                </div>
            </div>

          
        </div>
	</body>
</html>
