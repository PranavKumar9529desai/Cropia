{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "globalEnv": [
    "DATABASE_URL",
    "BACKEND_PORT",
    "NODE_ENV",
    "FRONTEND_URL_FARMER_APP",
    "FRONTEND_URL_ADMIN_APP",
    "BETTER_AUTH_SECRET",
    "BACKEND_URL",
    "GOOGLE_CLIENT_ID",
    "GOOGLE_CLIENT_SECRET",
    "GMAIL_USER",
    "GMAIL_PASSWORD",
    "CLOUDINARY_CLOUD_NAME",
    "CLOUDINARY_API_KEY",
    "CLOUDINARY_API_SECRET",
    "INDIA_LOCATION_API_BASE"
  ],
  "tasks": {
    "db:generate": {
      "cache": false,
      "inputs": [
        "prisma/schema.prisma"
      ]
    },
    "db:up": {
      "cache": false
    },
    "db:migrate": {
      "cache": false,
      "inputs": [
        "prisma/schema.prisma"
      ]
    },
    "db:push": {
      "cache": false,
      "inputs": [
        "prisma/schema.prisma"
      ]
    },
    "build": {
      "dependsOn": [
        "^build",
        "^db:generate",
        "db:generate"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*"
      ],
      "outputs": [
        "dist/**",
        ".next/**",
        "!.next/cache/**"
      ]
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ]
    },
    "type-check": {
      "dependsOn": [
        "^type-check",
        "^db:generate",
        "db:generate"
      ]
    },
    "dev": {
      "dependsOn": [
        "^db:generate",
        "^db:up"
      ],
      "cache": false,
      "persistent": true
    },
    "preview": {
      "dependsOn": [
        "^build"
      ],
      "cache": false,
      "persistent": true
    }
  }
}